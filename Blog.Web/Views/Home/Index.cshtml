@model IEnumerable<Blog.Web.Models.Domain.BlogPost>

@{
    ViewData["Title"] = "Blog";
}

<nav aria-label="breadcrumb" class="mt-3">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Blog</li>
    </ol>
</nav>

<header class="mb-4 text-center">
    <h1 class="display-6">Latest Posts</h1>
    <p class="text-muted">Read the latest articles and updates</p>
</header>

<text>
<style>
    /* Small page-scoped styles to improve card appearance */
    .post-card {
        transition: transform 0.18s ease, box-shadow 0.18s ease;
        border: 0; /* use shadow instead */
    }
    .post-card:hover {
        transform: translateY(-6px);
        box-shadow: 0 10px 30px rgba(0,0,0,0.12);
    }
    .post-thumb {
        height: 180px;
        object-fit: cover;
        width: 100%;
    }
    .card-title a { text-decoration: none; color: inherit; }
    .card-excerpt { max-height: 6.6em; overflow: hidden; }
    .card-footer .tag-list { gap: .35rem; }
    @@media (max-width: 576px) {
        .post-thumb { height: 160px; }
    }
</style>
</text>

<div class="row justify-content-center">
    <div class="col-12">
        @if (Model == null || !Model.Any())
        {
            <div class="text-center py-5">
                <p class="mb-3">No posts available.</p>
            </div>
        }
        else
        {
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-2 row-cols-lg-3 g-4">
                @foreach (var post in Model.OrderByDescending(p => p.PublishedDate))
                {
                    <div class="col">
                        <article class="card post-card h-100 shadow-sm d-flex flex-column">
                            @if (!string.IsNullOrEmpty(post.FeaturedImageUrl))
                            {
                                <img src="@post.FeaturedImageUrl" class="post-thumb card-img-top" alt="@post.Heading" />
                            }
                            else
                            {
                                <div class="bg-light d-flex align-items-center justify-content-center" style="height:180px;">
                                    <span class="text-muted">No image</span>
                                </div>
                            }

                            <div class="card-body d-flex flex-column">
                                <div class="mb-2">
                                    <small class="text-muted">@post.PublishedDate.ToString("yyyy-MM-dd") &middot; @post.Author</small>
                                </div>
                                <h5 class="card-title mb-2"><a href="#">@post.Heading</a></h5>

                                <p class="card-text text-muted card-excerpt">@post.ShortDescription</p>
                            </div>

                            <div class="card-footer bg-white border-0 mt-auto d-flex justify-content-between align-items-center">
                                <div class="d-flex flex-wrap tag-list">
                                    @if (post.Tags != null && post.Tags.Any())
                                    {
                                        foreach (var t in post.Tags)
                                        {
                                            <span class="badge bg-light border text-dark small me-1 mb-1">@t.Name</span>
                                        }
                                    }
                                </div>
                                <a class="btn btn-primary btn-sm" asp-controller="Blogs" asp-action="BlogPostDetail" asp-route-urlHandler="@post.UrlHandle" role="button">Read More</a>
                            </div>
                        </article>
                    </div>
                }
            </div>
        }
    </div>
</div>

