@model BlogDetailsViewModel
@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> signInManager
@inject UserManager<IdentityUser> userManager

@{
    ViewData["Title"] = Model?.Heading ?? "Blog Post";
}

<nav aria-label="breadcrumb" class="mt-3">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Blog</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Model?.Heading</li>
    </ol>
</nav>

<div class="row justify-content-center">
    <div class="col-lg-10">

        <div class="d-flex justify-content-between align-items-center mb-3">
            <a class="btn btn-outline-secondary btn-sm" asp-controller="Home" asp-action="Index">&larr; Back to list</a>
            <div>
                @if (Model?.Tags != null)
                {
                    foreach (var t in Model.Tags)
                    {
                        <span class="badge bg-light border text-dark me-1">@t.Name</span>
                    }
                }
            </div>
        </div>

        <article class="mb-4">
            @if (!string.IsNullOrEmpty(Model?.FeaturedImageUrl))
            {
                <img src="@Model.FeaturedImageUrl" alt="@Model.Heading" class="img-fluid rounded mb-3" style="width:100%; max-height:520px; object-fit:cover;" />
            }

            <h1 class="h3 mb-2">@Model.Heading</h1>
            <div class="text-muted mb-3">@Model.PublishedDate.ToString("yyyy-MM-dd") &middot; @Model.Author</div>

            <div class="text-muted mb-3">
                @if (signInManager.IsSignedIn(User) && User.IsInRole("User"))
                {                    
                    <a id="btnLike" style="cursor:pointer">
                        <i id="icon_like" class="bi bi-hand-thumbs-up"></i>
                    </a>                  
                }
                <span id="totalLikes">  @Model.TotalLikes  </span> likes
            </div>

            <p class="lead">@Model.ShortDescription</p>

            <div class="content">
                @Html.Raw(Model.Content)
            </div>
        </article>

        <div class="d-flex justify-content-between align-items-center mb-5">
            <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">&larr; Back to list</a>           
        </div>

    </div>
</div>
@section Scripts {
    <script>

            document.addEventListener("DOMContentLoaded", function () {
            isUserPostLiked();
        });

          const btnLikeElement=document.getElementById('btnLike');
           const iconElement=document.getElementById('icon_like');
           const totalLikesElement=document.getElementById('totalLikes');

                async function isUserPostLiked() {
            const response = await fetch('/api/BlogPostLike/@userManager.GetUserId(User)/@Model.Id', {
                method: 'GET',
                headers: {
                    "Content-Type": "application/json",
                    "Accept": "*/*"
                }
            });

            const res = await response.json();

            if (res === true) {
                btnLikeElement.innerHTML = '<i class="bi bi-hand-thumbs-up-fill"></i>';
                btnLikeElement.removeEventListener("click", addLikeForBlog);
            }
        }

        async function getTotalLikes(){
               fetch('/api/BlogPostLike/@Model.Id',{
                   method:'GET',
                     headers:{
                       "Content-Type":'application/json',
                       'Accept':'*/*'
                   }
               }).then(data=>data.json())
               .then(result=>totalLikesElement.innerHTML=result);
        }

         async function addLikeForBlog()
          {
              fetch('/api/BlogPostLike/',{
                  method:'POST',
                  headers:{
                      "Content-Type":'application/json',
                      'Accept':'*/*'
                  },
                   body:JSON.stringify({blogPostId:'@Model.Id',userId:'@userManager.GetUserId(User)'})
              }).then(()=>{
                   btnLikeElement.innerHTML='<i class="bi bi-hand-thumbs-up-fill"></i>';
                   btnLikeElement.removeEventListener("click",addLikeForBlog);
                   getTotalLikes();
              })


          }

          btnLikeElement.addEventListener("click",addLikeForBlog);
    </script>
}