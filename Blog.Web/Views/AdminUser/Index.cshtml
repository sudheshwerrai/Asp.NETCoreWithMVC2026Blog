@model IEnumerable<Blog.Web.Models.ViewModels.UserViewModel>

@{
    ViewData["Title"] = "Users";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h3 mb-0">@ViewData["Title"]</h1>
        <a asp-controller="Account" asp-action="Register" class="btn btn-primary">Create User</a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info" role="alert">
            No users found.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">User name</th>
                        <th scope="col">Email</th>
                        <th scope="col" class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var index = 1;
                    }
                    @foreach (var user in Model)
                    {
                        <tr>
                            <th scope="row">@index</th>
                            <td>@user.UserName</td>
                            <td>@user.Email</td>
                            <td class="text-end">                              
                                <form asp-controller="AdminUser" asp-action="Delete" asp-route-id="@user.Id" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-danger"
                                            onclick="return confirm('Are you sure you want to delete this user?');">
                                        Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                        index++;
                    }
                </tbody>
            </table>
        </div>
    }
</div>