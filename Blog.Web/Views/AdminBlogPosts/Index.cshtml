@model IEnumerable<BlogPost>

@{
    ViewData["Title"] = "Blog Posts";
}

<nav aria-label="breadcrumb" class="mt-3">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Blog Posts</li>
    </ol>
</nav>

<div class="row">
    <div class="col-12">
        <div class="card shadow-sm">
            <div class="card-header d-flex align-items-center justify-content-between bg-dark text-white">
                <h5 class="mb-0">Blog Posts</h5>
                <div>
                    <a class="btn btn-outline-light btn-sm me-2" asp-controller="AdminBlogPosts" asp-action="Create">Create New</a>                    
                </div>
            </div>
            <div class="card-body">                                
                @if (Model == null || !Model.Any())
                {
                    <div class="text-center py-5">
                        <p class="mb-3">No blog posts found.</p>                        
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-hover align-middle table-bordered">
                            <thead class="table-light">
                                <tr>
                                    <th>Heading</th>
                                    <th>Author</th>
                                    <th class="text-center">Published</th>
                                    <th class="text-center">Visible</th>
                                    <th class="text-center">Tags</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var post in Model)
                                {
                                    <tr>
                                        <td>
                                            <div class="fw-semibold">@post.Heading</div>
                                            <div class="text-muted small">@post.PageTitle</div>
                                        </td>
                                        <td>@post.Author</td>
                                        <td class="text-center">@post.PublishedDate.ToString("yyyy-MM-dd")</td>
                                        <td class="text-center">
                                            @if (post.Visible)
                                            {
                                                <span class="badge bg-success">Visible</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Hidden</span>
                                            }
                                        </td>
                                        <td>
                                            @foreach (var item in post.Tags)
                                            {                                               
                                                <span class="badge bg-secondary">@item.Name</span>
                                            }

                                        </td>
                                        <td class="text-end">
                                            <a class="btn btn-sm btn-outline-primary me-1" asp-controller="AdminBlogPosts" asp-action="Edit" asp-route-id="@post.Id">Edit</a>
                                            <form asp-controller="AdminBlogPosts" asp-action="Delete" asp-route-id="@post.Id" method="post" class="d-inline-block ms-1" onsubmit="return confirm('Are you sure you want to delete this post?');">
                                                <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


